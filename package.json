      "name": "Sarai DÃ­az"
    }
  ],
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "husky": "^1.1.2",
    "hyperapp": "^1.2.9",
    "json-server": "^0.14.0",
    "lint-staged": "^7.3.0",
    "parcel-bundler": "^1.10.3",
    "prettier-standard": "^8.0.1",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
