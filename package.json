{
  "name": "pokesi",
  "version": "1.0.0",
  "description": "POKESI, the perfect bowl",
  "scripts": {
    "lint:css": "stylelint client/**/*.css client/**/*.html",
    "lint:js": "prettier-standard client/**/*.js server/**/*.js",
    "start:client": "cd client && parcel --https index.html",
    "start:server": "cd server && json-server data.json"
  },
  "lint-staged": {
    "linters": {
      "client/**/*.css": [
        "npm run lint:css",
        "git add"
      ],
      "client/**/*.js": [
        "npm run lint:js",
        "git add"
      ],
      "server/**/*.js": [
        "npm run lint:js",
        "git add"
      ]
    }
  },
  "contributors": [
    {
      "name": "Pablo Molina"
    },
